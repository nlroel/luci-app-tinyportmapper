config general 'general'
	list server 'nil'
	option client_file '/usr/bin/tinymapper'
	option daemon_user 'root'
	option log '1'

config servers 'default'
	option server_addr ''
	option server_port '8080'
	option listen_addr '127.0.0.1'
	option listen_port '2080'
	option tcp		   '1'
	option udp		   '1'
	option log_level   '4'
